<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_15sdp"
        android:background="@drawable/cancellation_draw"
        app:layout_constraintBottom_toBottomOf="parent"
        >
     <ImageView
    android:layout_width="@dimen/_65sdp"
    android:layout_height="@dimen/_65sdp"
    android:id="@+id/ic_scooter"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="@dimen/_20sdp"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@drawable/group_33887"/>
      <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Are you sure for cancellation?"
       android:textSize="15sp"
       android:layout_marginTop="@dimen/_9sdp"
       android:fontFamily="@font/poppins_semibold"
       android:id="@+id/cancellation_txt"
       app:layout_constraintStart_toStartOf="@id/ic_scooter"
       app:layout_constraintTop_toBottomOf="@id/ic_scooter"
       android:textColor="@color/black"/>

   <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/black"
    android:layout_marginTop="@dimen/_2sdp"
    android:id="@+id/cancel_txt"
    android:fontFamily="@font/poppins"
    app:layout_constraintStart_toStartOf="@id/cancellation_txt"
    app:layout_constraintTop_toBottomOf="@id/cancellation_txt"
    android:textSize="13sp"
    android:text="@string/text"
/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:paddingVertical="@dimen/_12sdp"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintTop_toBottomOf="@id/cancel_txt"
            android:id="@+id/confirm_button"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/cancel_draw"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="@id/cancel_txt"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:textSize="15sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>