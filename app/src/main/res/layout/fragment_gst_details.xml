<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GstDetailsFragment">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orders"
            android:id="@+id/orders_txt"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginStart="@dimen/_13sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#DDD9D9"
        android:id="@+id/view"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/orders_txt"/>
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/edit_search"
    android:paddingVertical="@dimen/_8sdp"
    android:paddingHorizontal="5dp"
    android:singleLine="true"
    android:maxLength="10"
    android:inputType="number"
    android:paddingEnd="@dimen/_15sdp"
    android:drawableEnd="@drawable/vector__61_"
    android:layout_marginTop="@dimen/_13sdp"
    android:fontFamily="@font/poppins"
    android:textColorHint="@color/black"
    android:paddingStart="@dimen/_10sdp"
    android:layout_marginHorizontal="@dimen/_13sdp"
    app:layout_constraintTop_toBottomOf="@id/view"
    android:background="@drawable/edit_draw"
    android:hint="Search Mobile No."
    android:textSize="13sp"/>

    <LinearLayout
        android:id="@+id/button_linnear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="@+id/edit_search"
        app:layout_constraintTop_toBottomOf="@id/edit_search">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/all_order_txt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/allorder_draw"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="All Orders"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wallet_passbook_layout" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/today_txt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/today_drawables"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="Today"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wallet_passbook_layout" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/date_txt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/allorder_draw"
            android:drawableEnd="@drawable/vector__58_"
            android:fontFamily="@font/poppins"
            android:paddingHorizontal="@dimen/_8sdp"
            android:text="Date"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wallet_passbook_layout" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/status_txt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/allorder_draw"
            android:drawableEnd="@drawable/vector__58_"
            android:fontFamily="@font/poppins"
            android:paddingHorizontal="@dimen/_8sdp"
            android:text="Status"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wallet_passbook_layout" />
    </LinearLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/_15sdp"
       android:layout_marginTop="@dimen/_20sdp"
      android:background="@drawable/deliver_draw"
      app:layout_constraintTop_toBottomOf="@id/button_linnear_layout">

      <LinearLayout
          android:id="@+id/main_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/from_draw"
          android:orientation="horizontal"
          android:paddingVertical="@dimen/_4sdp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginStart="@dimen/_10sdp"
              android:layout_weight="1"
              android:fontFamily="@font/poppins_semibold"
              android:text="Time"
              android:textColor="@color/black"
              android:textSize="12sp" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginStart="@dimen/_40sdp"
              android:layout_weight="1"
              android:fontFamily="@font/poppins_semibold"
              android:text="Receiverâ€™s No."
              android:textColor="@color/black"
              android:textSize="12sp" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginStart="@dimen/_14sdp"
              android:layout_weight="1"
              android:fontFamily="@font/poppins_semibold"
              android:text="Status"
              android:textColor="@color/black"
              android:textSize="12sp" />
      </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/main_layout"
        tools:itemCount="10"
        tools:listitem="@layout/dates_layout" />

  </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>