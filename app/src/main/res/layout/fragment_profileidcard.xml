<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileidcardFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainlayout"
    android:paddingVertical="@dimen/_5sdp"
    android:elevation="10dp"
    android:background="@color/white"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="21dp"
        android:layout_marginStart="@dimen/_13sdp"
        android:id="@+id/image"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/vector__66_"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Handover Id Card"
        android:textSize="24dp"
        android:id="@+id/profile"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toTopOf="@id/image"
        app:layout_constraintBottom_toBottomOf="@id/image"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:layout_marginStart="@dimen/_13sdp"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="12sp"
        android:drawablePadding="@dimen/_5sdp"
        android:drawableStart="@drawable/vector__39_"
        android:layout_marginEnd="@dimen/_15sdp"
        android:textColor="#0F6FB5"
        android:fontFamily="@font/inter_semibold"
        app:layout_constraintBottom_toBottomOf="@id/profile"
        app:layout_constraintTop_toTopOf="@id/profile"/>

</androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_13sdp"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:background="@drawable/profile__border"
        app:layout_constraintTop_toBottomOf="@id/mainlayout"
       >


        <ImageView
            android:id="@+id/profileimage"
            android:layout_width="90dp"
            android:layout_height="88dp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="16dp"
            android:background="@drawable/cheerful_indian_businessman_smiling_closeup_portrait_jobs_career_campaign"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/abhiskjaiswal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/inter_semibold"
            android:text="Abhishek Jaiswal"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/profileimage"
            app:layout_constraintTop_toBottomOf="@id/profileimage" />

        <TextView
            android:id="@+id/rider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="Bike Rider"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/abhiskjaiswal"
            app:layout_constraintTop_toBottomOf="@id/abhiskjaiswal" />

        <ImageView
            android:id="@+id/handover"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/logo2_01_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/verifieddraw"
            android:text="Verified"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/handover" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#EFEFEF"
            app:layout_constraintTop_toBottomOf="@id/rider" />

        <TextView
            android:id="@+id/mobilenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/inter_semibold"
            android:text="Mobile Number"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/abhiskjaiswal"
            app:layout_constraintTop_toBottomOf="@id/view" />

        <TextView
            android:id="@+id/mobilenumber1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="+91 9540009527"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/abhiskjaiswal"
            app:layout_constraintTop_toBottomOf="@id/mobilenumber" />

        <TextView
            android:id="@+id/licnesenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/inter_semibold"
            android:text="License Number"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/abhiskjaiswal"
            app:layout_constraintTop_toBottomOf="@id/mobilenumber1" />
        <TextView
            android:layout_width="112dp"
            android:layout_height="25dp"
            android:text="Update New"
            android:textColor="#0F6FB5"
            android:textAlignment="center"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_6sdp"
            android:drawableStart="@drawable/vector__65_"
            app:layout_constraintBottom_toBottomOf="@id/upinumber"
            android:background="@drawable/update_draw"
            android:fontFamily="@font/inter_semibold"
            app:layout_constraintTop_toTopOf="@id/licnesenumber"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/licnesenumber"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/upinumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="UP1620200015886"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/abhiskjaiswal"
            app:layout_constraintTop_toBottomOf="@id/licnesenumber" />

        <TextView
            android:id="@+id/services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/inter_semibold"
            android:text="Services"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/abhiskjaiswal"
            app:layout_constraintTop_toBottomOf="@id/upinumber" />

        <TextView
            android:id="@+id/services1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="Instant Delivery"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/abhiskjaiswal"
            app:layout_constraintTop_toBottomOf="@id/services" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_13sdp"
             android:layout_marginTop="@dimen/_22sdp"
            android:background="@drawable/share"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@id/services1">

            <TextView
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Share"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_constraintEnd_toStartOf="@id/logout"
                android:background="@drawable/vector__41_"
                app:layout_constraintBottom_toBottomOf="@id/logout"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="@id/logout" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="145dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="View declaration"
        android:textAllCaps="false"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="40dp"
        android:textColor="#0F6FB5"
        android:fontFamily="@font/inter_semibold"
        android:background="@drawable/viewdeclration"
        app:layout_constraintTop_toBottomOf="@id/mainlayout1"
        android:textSize="14sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>