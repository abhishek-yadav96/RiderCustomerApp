<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LanguageSettingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainlayout"
        android:padding="15dp"
        android:elevation="10dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="21dp"
            android:layout_marginStart="@dimen/_13sdp"
            android:id="@+id/image"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/ic_baseline_arrow_back_ios_new_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language Settings"
            android:textSize="24dp"
            android:id="@+id/profile"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintTop_toTopOf="@id/image"
            app:layout_constraintBottom_toBottomOf="@id/image"
            app:layout_constraintTop_toBottomOf="@id/image"
            android:layout_marginStart="@dimen/_11sdp"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:id="@+id/mainlayout1"
            android:padding="10dp"
            android:layout_marginHorizontal="@dimen/_13sdp"
            app:layout_constraintTop_toBottomOf="@id/mainlayout">

            <ImageView
                android:id="@+id/language_image"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/rectangle_1578"
                android:background="@drawable/drawablebike"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="@id/set_txt"
                app:layout_constraintTop_toTopOf="@id/handovercard"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Language"
                android:textSize="14sp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:id="@+id/handovercard"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/language_image"/>
<TextView
    android:layout_width="wrap_content"
    android:fontFamily="@font/inter_semibold"
    android:layout_height="wrap_content"
    android:text="Set the language for your app"
    android:textSize="14sp"
    android:id="@+id/set_txt"
    app:layout_constraintStart_toStartOf="@id/handovercard"
    app:layout_constraintTop_toBottomOf="@id/handovercard"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/handovercard"
                app:layout_constraintBottom_toBottomOf="@id/handovercard"
                android:background="@drawable/group_34080"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#F1F1F1"
        android:id="@+id/view"
        android:layout_marginStart="@dimen/_60sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainlayout1"
        android:layout_marginTop="@dimen/_13sdp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_13sdp"
        android:id="@+id/mainlayout2"
        android:padding="10dp"
        android:layout_marginHorizontal="@dimen/_13sdp"
        app:layout_constraintTop_toBottomOf="@id/view">

        <ImageView
            android:id="@+id/languageimage1"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/vector__44_"
            android:background="@drawable/drawablebike"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@id/set_notification_txt"
            app:layout_constraintTop_toTopOf="@id/handovercard1"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification Language"
            android:textSize="14sp"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:id="@+id/handovercard1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/languageimage1"/>
        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:layout_height="wrap_content"
            android:text="Set the language for notifications"
            android:textSize="14sp"
            android:id="@+id/set_notification_txt"
            app:layout_constraintStart_toStartOf="@id/handovercard1"
            app:layout_constraintTop_toBottomOf="@id/handovercard1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/handovercard1"
            app:layout_constraintBottom_toBottomOf="@id/handovercard1"
            android:background="@drawable/group_34080"/>






    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>