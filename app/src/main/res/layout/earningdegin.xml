<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16 FEB 2023"
        android:textSize="12sp"
        android:id="@+id/date_txt"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/inter_semibold"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#0F6FB5"/>
    <ImageView
        android:id="@+id/language_image"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/group_33998"
        android:background="@drawable/drawablebike"
        android:padding="8dp"
         app:layout_constraintTop_toTopOf="@id/orders"
        app:layout_constraintBottom_toBottomOf="@id/earning_txt"
        app:layout_constraintStart_toStartOf="@id/date_txt"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Cancellation Fare"
    android:textSize="14sp"
    android:id="@+id/orders"
    android:layout_marginTop="25dp"
    android:layout_marginStart="16sp"
    app:layout_constraintTop_toTopOf="parent"
    android:fontFamily="@font/inter_semibold"
    android:textColor="@color/black"
    app:layout_constraintStart_toEndOf="@id/language_image"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RD16730969641635097"
        android:textSize="12sp"
        android:fontFamily="@font/inter_semibold"
        android:id="@+id/earning_txt"
        app:layout_constraintStart_toStartOf="@id/orders"
        app:layout_constraintTop_toBottomOf="@id/orders"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="+ â‚¹33.65"
    android:textColor="#26B533"
    android:layout_marginEnd="18dp"
    android:id="@+id/id_txt"
    android:fontFamily="@font/inter_semibold"
    app:layout_constraintBottom_toBottomOf="@id/earning_txt"
    app:layout_constraintTop_toTopOf="@id/orders"
    app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="@font/inter_semibold"
        android:id="@+id/cancellation"
        app:layout_constraintStart_toStartOf="@id/earning_txt"
        app:layout_constraintTop_toBottomOf="@id/earning_txt"
        android:text="Cancellation Fare for 12:13 PM order"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="12:14 PM"
    android:textSize="12sp"
    android:id="@+id/times_txt"
    android:fontFamily="@font/inter_semibold"
    app:layout_constraintStart_toStartOf="@id/cancellation"
    app:layout_constraintTop_toBottomOf="@id/cancellation"/>

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/vector__76_"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="@dimen/_20sdp"
    app:layout_constraintBottom_toBottomOf="@id/times_txt"
    app:layout_constraintTop_toTopOf="@id/times_txt"
    app:layout_constraintTop_toBottomOf="@id/times_txt"/>
</androidx.constraintlayout.widget.ConstraintLayout>