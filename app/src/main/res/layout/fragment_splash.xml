<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splash_draw"
    tools:context=".SplashFragment">

    <ImageView
        android:id="@+id/ic_handover"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/cameradrawable"
        android:padding="8dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/logo2_01_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<ImageView
    android:layout_width="185dp"
    android:layout_height="387dp"
    android:layout_marginTop="40dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/ic_handover"
    android:background="@drawable/character_1"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:text="Getting Started"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:id="@+id/submit"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="145dp"
        android:drawableEnd="@drawable/group_34024"
        android:layout_marginBottom="60dp"
        android:background="@drawable/buttondegins"
        android:layout_marginHorizontal="30dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
